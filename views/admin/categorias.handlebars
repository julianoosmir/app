<h2>Listas de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn success" style="color: black;"> nova categorias</button></a>  

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{  nome }}</h4>
        <small>{{slug}}</small>
        <small>Data e hora : {{data}}</small>
       <a href="/admin/categorias/edit/{{ id}}"><button class="btn btn-success">Editar categorias </button class="btn btn-success"></a>
    <form action="/admin/categorias/deletar" method="POST">
    <input type="hidden" name="id" value="{{_id}}">
    <button type="submit" class="btn btn-danger mt-4">Deletar</button>
    </form>
   
    
</div>


</div>
{{else}}
<H3>sem registros</H3>
{{/each}}