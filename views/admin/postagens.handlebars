<h2>Listas de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn success" style="color: black;"> nova postagens</button></a>  

{{#each postagens}}
<div class="card">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>descriçao:   {{descriçao}}</p><br>
        <small>data:</Datag>{{data}}</small><br>
        <small> categoria: {{categoria.nome}}</small><br><br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">editar postagem</button> </a>
        <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger">deletar postagem</button> </a>
    </div>
</div>
{{else}}
<br>
<p class="mt-4">nenhuma postagem registrada</p>
{{/each}}